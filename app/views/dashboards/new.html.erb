<div class="container">
	<div class="row">
		<div class="col-4">
		</div>
		<div class="col-4">
			<%= form_tag('/dashboards', :method => "post")%>
			<div class="field">
		        <%= label_tag :Nom %><br />
		        <%= text_field_tag :nom, @dashboard.nom%>
		      </div>

		      <div class="field">
		        <%= label_tag :Quartier %><br />
		        <%= text_field_tag :cartier%>
		      </div>

		      <div class="field">
		        <%= label_tag :Operateur %><br />
		        <%= text_field_tag :operateur %>
		      </div>

		      <div class="field">
		        <%= label_tag :Numero %><br />
		        <%= text_field_tag :numero%>
		      </div>

		      <div class="field">
		        <%= label_tag :Reference %><br />
		        <%= text_field_tag :ref%>
		      </div>

		      <div class="field">
		        <%= label_tag :Net %><br />
		        <%= number_field_tag :net%>
		      </div>

		      <div class="field">
		        <%= label_tag :Brut %><br />
		        <%= number_field_tag :brut%>
		      </div>

		      <div class="field">
		        <%= label_tag :Frais_Operateur %><br />
		        <%= number_field_tag :frais_operateur%>
		      </div>

		      <div class="field">
		        <%= label_tag :Autre_Frais %><br />
		        <%= number_field_tag :autre_frais%>
		      </div>

		      <div class="field">
		        <input type="hidden" name="user_id" id="user_id" value="<%= current_user.id %>">
		      </div>

		      <div class="actions">
		        <%= submit_tag "Create", class: 'btn btn-success'%>
		      </div>
		</div>
		<div class="col-4">
		</div>
	</div>
</div>